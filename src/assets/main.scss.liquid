// list-get MIMIC map-get

@function list-get($list, $key) {
  @each $item in $list {
    $item-key: nth($item, 1);
    $item-value: nth($item, 2);
    @if $item-key == $key {
    	@return $item-value;
    }
  }
}


// MEDIA QUERY max-width
@mixin mq-lt($name) {
	@media(max-width: list-get($breakpoints, $name) - 1){
		@content;
	}
}

// MEDIA QUERY min-width
@mixin mq-gteq($name) {
	@media(min-width: list-get($breakpoints, $name)){
		@content;
	}
}

// MEDIA QUERY max-width
@mixin mq-\<($name) {
	@media(max-width: list-get($breakpoints, $name) - 1){
		@content;
	}
}

// MEDIA QUERY min-width
@mixin mq-\>\=($name) {
	@media(min-width: list-get($breakpoints, $name)){
		@content;
	}
}


// VENDOR PREFIX
@mixin css3-prefix($property, $value) {
  -webkit-#{$property}: #{$value};
   -khtml-#{$property}: #{$value};
     -moz-#{$property}: #{$value};
      -ms-#{$property}: #{$value};
       -o-#{$property}: #{$value};
          #{$property}: #{$value};
}



// TRANSITION
@mixin transition($properties...) {
  @if length($properties) >= 1 {
    @include css3-prefix('transition', $properties);
  }
  @else {
    @include css3-prefix('transition',  "all 400ms ease-in-out 0s");
  }
}

// TRANSFORM
@mixin transform($params) {
  @include css3-prefix('transform', $params);
}

// ROTATE MATRIX
@mixin rotate($deg: 0, $m11: 0, $m12: 0, $m21: 0, $m22: 0) {
  @include css3-prefix('transform', rotate($deg + deg));
  filter: progid:DXImageTransform.Microsoft.Matrix(
    M11=#{$m11}, M12=#{$m12}, M21=#{$m21}, M22=#{$m22}, sizingMethod='auto expand');
    zoom: 1;
}








// INPUT PLACEHOLDER
@mixin input-placeholder {
  &::-webkit-input-placeholder {@content}
  &:-moz-placeholder           {@content}
  &::-moz-placeholder          {@content}
  &:-ms-input-placeholder      {@content}
}





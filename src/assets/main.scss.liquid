	padding: 30px 20px;
	min-height: 250px;

	max-height: calc(100vh - 100px - 2 * #{list-get($navbar-nav-height, desktop)});
	body.navbar-banner-active &{
		max-height: calc(100vh - 100px - 2 * (#{list-get($navbar-nav-height, desktop)} + #{list-get($navbar-banner-height, desktop)}));
	}

	@include mq-lt(small){
		max-height: calc(100vh - 100px - 2 * #{list-get($navbar-nav-height, mobile)});
		body.navbar-banner-active &{
			max-height: calc(100vh - 100px - 2 * (#{list-get($navbar-nav-height, mobile)} + #{list-get($navbar-banner-height, mobile)}));
		}
	}

	background-color: rgba(255, 255, 255, 1);

	overflow-y: auto; /* has to be scroll, not auto */
	-webkit-overflow-scrolling: touch;



}

.mini-cart-empty-notice{
	position: absolute;
	top: 0;
